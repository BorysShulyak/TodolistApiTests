							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"Fields in the response exist\", function() {",
							"    let jsonData = pm.response.json();",
							"    const success = jsonData.success;",
							"    const data = jsonData.data;",
							"    pm.expect(success).to.not.eql(null);",
							"    pm.expect(data).to.not.eql(null);",
							"    pm.expect(data.description).to.not.eql(null);",
							"    pm.expect(data.completed).to.not.eql(null);",
							"});",
							"",
							"pm.test(\"Fields values are correct\", function() {",
							"    let jsonData = pm.response.json();",
							"    const success = jsonData.success;",
							"    const data = jsonData.data;",
							"    pm.expect(success).to.eql(true);",
							"    pm.expect(data.description).to.eql(pm.environment.replaceIn(\"{{taskDescription}}\"));",
							"    pm.expect(data.completed).to.eql(false)",
